{
    "name": "astrotechlabs/yii2-jwt-tools",
    "type": "yii2-extension",
    "description": "An easy way to configure JWT authentication and validation on Yii Framework 2 Projects",
    "license": "MIT",
    "minimum-stability": "dev",
    "keywords": [
        "yii2",
        "yii2-framework",
        "yii2-extension",
        "yii2-authentication",
        "yii2-jwt",
        "yii2-jwt-auth",
        "yii2-security",
        "yii2-jwt-tools"
    ],
    "scripts": {
        "test": "phpunit --testdox --do-not-cache-result --configuration tests/phpunit.xml",
        "php-cs": "phpcs ./src"
    },
    "authors": [
        {
            "name": "Kilderson Sena",
            "email": "kilderson@astrotech.solutions",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "DersonSena\\JWTTools\\": "src",
            "AstrotechLabs\\JWTTools\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "require": {
        "php": ">=8",
        "firebase/php-jwt": "^6.1",
        "yiisoft/yii2": "^2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^8.4"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
